{
  "name": "photos",
  "displayName": "内容相册插件",
  "description": "SSCMS 内容相册插件能够实现内容相册功能",
  "version": "1.0.0",
  "license": "GPL-3.0",
  "publisher": "sscms",
  "engines": {
    "sscms": "^7.0.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "内容"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/siteserver/sscms.photos"
  },
  "icon": "/assets/photos/logo.svg",
  "output": "bin/Release/netcoreapp3.1",
  "main": "SSCMS.Photos.dll",
  "extensions": {
    "permissions": {
      "photos_settings": {
        "text": "图片上传设置",
        "type": "site"
      },
      "photos_content": {
        "text": "内容相册",
        "type": "content"
      }
    },
    "menus": {
      "photos_all": {
        "text": "内容相册",
        "iconClass": "ion-images",
        "type": "site",
        "permissions": [
          "photos_settings"
        ],
        "menus": {
          "photos_settings": {
            "text": "图片上传设置",
            "link": "/ss-admin/photos/settings/",
            "permissions": ["photos_settings"],
            "order": 1
          }
        }
      },
      "photos_content": {
        "text": "内容相册",
        "type": "content",
        "link": "/ss-admin/photos/photos/",
        "permissions": ["photos_content"],
        "order": 1
      }
    },
    "tables": {
      "sscms_photos": {
        "columns": [
          {
            "attributeName": "SiteId",
            "dataType": "Integer"
          },
          {
            "attributeName": "ChannelId",
            "dataType": "Integer"
          },
          {
            "attributeName": "ContentId",
            "dataType": "Integer"
          },
          {
            "attributeName": "SmallUrl",
            "dataType": "VarChar"
          },
          {
            "attributeName": "MiddleUrl",
            "dataType": "VarChar"
          },
          {
            "attributeName": "LargeUrl",
            "dataType": "VarChar"
          },
          {
            "attributeName": "Taxis",
            "dataType": "Integer"
          },
          {
            "attributeName": "Description",
            "dataType": "VarChar",
            "dataLength": 2000
          }
        ]
      }
    }
  }
}